@model Discussion

@{
    var errorMessage = ViewBag.ErrorMessage as string;
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div id="errorMessage" class="alert alert-danger">
        @errorMessage
    </div>
}

<h4>Create new discussion</h4>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Topic"></label><span class="text-danger">*</span>
        <input asp-for="Topic" class="form-control" />
        <span asp-validation-for="Topic" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Body"></label><span class="text-danger">*</span>
        <input asp-for="Body" class="form-control" />
        <span asp-validation-for="Body" class="text-danger"></span>
    </div>
    <div class="mt-2">
        <button type="submit" class="btn btn-success">Create</button>
        <a href="/Discussions" class="btn btn-primary">Back to Discussions</a>
    </div>
</form>

<script>setTimeout(() => document.getElementById("errorMessage").style.display = "none", 3000);</script>