@model IEnumerable<Discussion>
@{

    var userLoggedIn = Context.Session.GetString("UserEmail");
}

<h1>Discussions</h1>

<section class="row">
    <div class="col-sm-6">
        @foreach (var discussion in Model)
        {
            <article class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@discussion.Header</h5>
                    <p class="card-text">@discussion.Body</p>
                    <a asp-controller="Discussions" asp-action="Details" asp-route-id="@discussion.Id" class="btn btn-primary">View</a>
                    @if (userLoggedIn == discussion.Author.Email)
                    {
                        <a href="#" class="btn btn-danger">Delete</a>
                    }
                </div>
            </article>
        }
    </div>
</section>