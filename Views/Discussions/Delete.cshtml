@model Discussion

<h4>Are you sure you want to delete this Discussion? With topic "@Model.Topic"</h4>

<form asp-action="DeleteConfirmed" asp-route-id="@Model?.Id" method="post">
    <button type="submit" class="btn btn-danger">Yes, delete</button>
    <a asp-controller="Discussions" asp-action="Details" asp-route-id="@Model?.Id" class="btn btn-primary">Cancel</a>
</form>