@model Discussion

<h1>Are you sure you want to delete this Discussion? With topic "@Model.Topic"</h1>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Discussions" class="btn btn-primary">Cancel</a>
</form>